model Category {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  Menu      Menu[]

  @@schema("binkitchen")
}

model Menu {
  id         Int       @id @default(autoincrement())
  name       String
  image      String
  price      String
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @default(now())

  @@schema("binkitchen")
}

model Order {
  id        Int      @id @default(autoincrement())
  status    String   @default("PENDING")
  tableId   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@schema("binkitchen")
}
