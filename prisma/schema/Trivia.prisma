model TriviaQuiz {
  id               Int            @id @default(autoincrement())
  quiz             String
  answer           TriviaChoice   @relation("TriviaQuizAnswer", fields: [triviaChoiceId], references: [id])
  choices          TriviaChoice[]
  triviaChoiceId   Int
  category         TriviaCategory @relation(fields: [triviaCategoryId], references: [id])
  triviaCategoryId Int
}

model TriviaChoice {
  id                Int          @id @default(autoincrement())
  choice            String
  triviaQuiz        TriviaQuiz?  @relation(fields: [triviaQuizId], references: [id])
  triviaQuizId      Int?
  triviaQuizAnswers TriviaQuiz[] @relation("TriviaQuizAnswer")
}

model TriviaCategory {
  id           Int          @id @default(autoincrement())
  category     String
  triviaQuizes TriviaQuiz[]
}
