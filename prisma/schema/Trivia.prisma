model TriviaQuiz {
  id             Int            @id @default(autoincrement())
  quiz           String
  answer         TriviaChoice   @relation("TriviaQuizAnswer", fields: [triviaChoiceId], references: [id])
  choices        TriviaChoice[]
  triviaChoiceId Int
}

model TriviaChoice {
  id               Int          @id @default(autoincrement())
  choice           String
  triviaQuiz       TriviaQuiz?  @relation(fields: [triviaQuizId], references: [id])
  triviaQuizId     Int?
  triviaQuizAnswer TriviaQuiz[] @relation("TriviaQuizAnswer")
}
