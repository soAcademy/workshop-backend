datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["todolist", "binkitchen"]
}

generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "darwin-arm64", "debian-openssl-1.1.x"]
  output          = "../prisma/client"
  previewFeatures = ["multiSchema"]
}
